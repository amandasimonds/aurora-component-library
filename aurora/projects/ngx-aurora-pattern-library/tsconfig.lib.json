{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "ngx-aurora-pattern-library": ["projects/ngx-aurora-pattern-library/src/public-api"]
    },
    "outDir": "../../out-tsc/lib",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "**/*.stories.*"
  ]
}
